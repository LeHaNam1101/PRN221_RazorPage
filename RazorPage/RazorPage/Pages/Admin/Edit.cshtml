@page
@model RazorPage.Pages.Admin.EditModel
@{
}

<div id="content-left">
    <ul>
        <a href="~/admin/dashboard">
        <li>Dashboard</li></a>
        <a href="~/admin/order">
        <li>Orders</li></a>
        <a href="~/admin/product">
        <li>Products</li></a>
        <a href="~/admin/customer">
        <li>Customers</li></a>
    </ul>
</div>
<div id="content-right">
    <div class="path-admin">Product #@Model.Product.ProductId</div>
    <div class="content-main">
        <form id="content-main-product" method="post">
            <div class="content-main-1">
                <label>Product name (*):</label><br />
                <input asp-for="Product.ProductName"><br />
                <span asp-validation-for="Product.ProductName" class="msg-error"></span><br />
                <label>Unit price (*):</label><br />
                <input asp-for="Product.UnitPrice"><br />
                <span asp-validation-for="Product.UnitPrice" class="msg-error"></span><br />
                <label>Quantity per unit (*):</label><br />
                <input asp-for="Product.QuantityPerUnit"><br />
                <span asp-validation-for="Product.QuantityPerUnit" class="msg-error"></span><br />
                <label>Units in stock (*):</label><br />
                <input asp-for="Product.UnitsInStock"><br />
                <span asp-validation-for="Product.UnitsInStock" class="msg-error"></span><br />
            </div>
            <div class="content-main-1">
                <label>Category (*):</label><br />
                <select asp-for="Product.CategoryId">
                    <option disabled value="">----Select product's category----</option>
                    @foreach (var cate in Model.Category)
                    {
                        <option value="@cate.CategoryId">@cate.CategoryName</option>
                    }
                </select>
                <br />
                <span asp-validation-for="Product.CategoryId" class="msg-error"></span><br />
                <label>Reorder level:</label><br />
                <input asp-for="Product.ReorderLevel" disabled><br />
                <label>Units on order:</label><br />
                <input asp-for="Product.UnitsOnOrder" disabled><br />
                <label>Discontinued:</label><br />
                <input asp-for="Product.Discontinued"><br />
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>