@page
@model RazorPage.Pages.Account.ProfileModel
@{
}
@if (HttpContext.Session.GetString("EmpSession") != null)
{
    Response.Redirect("/admin/dashboard");
}
else
{
@if (HttpContext.Session.GetString("CusSession") == null){
    <h1>
        You have not logged in
    </h1>
}else{
    <div id="content-left">
        <h3 style="font-weight: normal;">Welcome, @Model.Account.Customer.ContactName</h3>
        <h3>Account Management</h3>
        <ul>
            <a href="~/account/profile">
            <li>Personal information</li></a>
        </ul>
        <h3>My order</h3>
        <ul>
            <a href="~/account/order">
            <li>All orders</li></a>
            <a href="#">
            <li>Canceled order</li></a>
        </ul>
    </div>
    <div id="content-right">
        <div class="path">Personal information</div>
        <div class="content-main">
            <div id="profile-content">
                <div class="profile-content-col">
                    <div>Company name: <br />@Model.Account.Customer.CompanyName</div>
                    <div>Contact name: <br />@Model.Account.Customer.ContactName</div>
                    <div>
                        <a asp-page="./Edit" asp-route-id="@Model.Account.AccountId">Edit info</a>
                    </div>
                </div>
                <div class="profile-content-col">
                    <div>Company title: <br />@Model.Account.Customer.ContactTitle</div>
                    <div>Address: <br />@Model.Account.Customer.Address</div>
                </div>
                <div class="profile-content-col">
                    <div>Email: <br />@Model.Account.Email</div>
                </div>
            </div>
        </div>
    </div>
}
}